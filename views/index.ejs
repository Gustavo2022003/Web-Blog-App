<%- include("partials/header.ejs"); %>

    <div class="container-fluid">

        <h1 class="title">✨ Web Blog App ✨</h1>

        <div class="post-form">
            <form action="/post" method="post">
                <input class="username" type="text" name="username" id="username" placeholder="username" required maxlength="17">
                <textarea class="post-body" maxlength="372" placeholder="What's happening?" name="post-body" id="post-body" cols="30" rows="10" required></textarea>
                <br>
                <button type="submit" class="submitPost">Post</button>
            </form>
        </div>

        <div class="timeline">
            <% if (locals.posts) { %>
                <% posts.forEach((post, index) => { %>
                    <%- include("partials/post.ejs", {post: post, postIndex: index}); %>
                <% }); %>
            <% } else { %>
                <p>Não há nenhum post.</p>
            <% }; %>
        </div>

    </div>

<%- include("partials/footer.ejs"); %>